[MASTER]
# Ignore import errors for heavy ML dependencies that may not be available in all environments
ignored-modules=faiss,torch,torchvision,open_clip

[MESSAGES CONTROL]
# Disable import-error for specific heavy dependencies and some style issues that are less critical
disable=import-error,missing-module-docstring,missing-function-docstring,missing-class-docstring,logging-fstring-interpolation,too-many-nested-blocks,broad-exception-caught,import-outside-toplevel,global-statement,too-many-locals,too-many-branches,too-many-statements,redefined-outer-name,reimported

[DESIGN]
# Allow reasonable complexity for ML/AI applications
max-args=10
max-locals=20
max-returns=8
max-branches=15
max-statements=60

[FORMAT]
# Match black formatter settings
max-line-length=100